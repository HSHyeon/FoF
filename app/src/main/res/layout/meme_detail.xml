<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgray">

        <LinearLayout
            android:id="@+id/wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목"
                style="@style/point_16dp"
                android:gravity="center"
             />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <ImageButton
                android:id="@+id/report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/meme2"
            android:adjustViewBounds="true"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wrap"
            android:transitionName="example_transition"
            />
        <LinearLayout
            android:id="@+id/wrap_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/copyright"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:text="@string/copyright"
                    style="@style/basic_12dp"
                    android:textColor="@color/deepgray2"
                    android:layout_marginLeft="8dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <ToggleButton
                    android:id="@+id/like"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/like_custom"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp"

                    />
                <ImageButton
                    android:id="@+id/copy"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/copy_111"
                    android:layout_marginRight="10dp"
                    />
                <ImageButton
                    android:id="@+id/send"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/send_btn"
                    android:layout_marginRight="20dp"

                    /></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Tag"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toBottomOf="@+id/wrap_2"
>

            <TextView
                style="@style/basic_12dp"
                android:layout_width="66dp"
                android:layout_height="26dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="#클립"
                android:textAlignment="center" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="35dp"
            android:id="@+id/similar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Tag" />
    </androidx.constraintlayout.widget.ConstraintLayout></androidx.cardview.widget.CardView>