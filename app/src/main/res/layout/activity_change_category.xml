<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category.CategoryActivity"
    >

    <ImageButton
        android:id="@+id/backBt"
        android:background="@drawable/back"
        android:layout_width="10dp"
        android:layout_gravity="bottom"
        android:layout_height="17dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/information"
        style="@style/point_32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="133dp"
        android:layout_marginHorizontal="20dp"
        android:text="밈 집중선택"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/graytv"
        style="@style/basic_14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:text="어떤 밈을 선호하나요?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/information" />
    <ToggleButton
        android:id="@+id/button1"
        style="@style/bold_16dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        android:freezesText="false"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information" />

    <ToggleButton
        android:id="@+id/button2"
        style="@style/bold_16dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information"
        app:layout_constraintVertical_bias="0.0" />

    <ToggleButton
        android:id="@+id/button3"
        style="@style/bold_16dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/bold_16dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <ToggleButton
        android:id="@+id/button5"
        style="@style/bold_16dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/bold_16dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="95dp"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/bold_16dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:weightSum="2"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/finish_btn"
            style="@style/bold_16dp"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:background="@drawable/btn_check_box"
            android:text="완료"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>