<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/wrap"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/back"
            android:background="@drawable/back"
            android:layout_width="10dp"
            android:layout_gravity="bottom"
            android:layout_height="17dp"
            android:layout_marginLeft="20dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/logo_big"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        style="@style/point_40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="작별인사"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/textView7"
        style="@style/basic_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="계정을 탈퇴하시겠습니까?"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="44dp"
        style="@style/basic_12dp_black"
        android:layout_marginHorizontal="42dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정을 삭제하는 경우" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="￭ 포프와 친구가 아니게 됩니다." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="￭ 더 이상 해당 계정으로 포프에 로그인할 수 없게 됩니다.\n
로그인을 해야 할 경우, 다시 회원가입을 해야 합니다. " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="￭ 게시한 컨텐츠에 대한 액세스 권한이 손실됩니다 " />
    </LinearLayout>

    <Button
        android:id="@+id/withdrawal_btn"
        style="@style/bold_16dp"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/btn_check_box"
        android:text="탈퇴하기"
        android:layout_marginBottom="105dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>