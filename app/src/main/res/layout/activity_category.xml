<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/information"
        style="@style/basic_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="밈 집중선택"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ToggleButton
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />

    <ToggleButton
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <ToggleButton
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/button6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/button7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/category_circle"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintCircle="@+id/button1"
        app:layout_constraintCircleAngle="360"
        app:layout_constraintCircleRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/skip_btn"
            style="@style/basic_16dp"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@drawable/skip_btn_box"
            android:text="건너뛰기"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_btn"
            style="@style/basic_16dp"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/check_btn_box"
            android:text="다음"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>