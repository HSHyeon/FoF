<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wrap"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <TextView
                android:id="@+id/title"
                style="@style/point_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="신고"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/btn_cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1px"
            android:background="@color/lightgray"
            app:layout_constraintTop_toBottomOf="@+id/wrap"
            />

        <TextView
            android:id="@+id/info"
            style="@style/bold_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="게시물을 신고하는 이유가 무엇인가요?"
            android:textColor="@color/deepgray"
            android:textSize="12dp"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="0dp"
            style="@style/basic_12dp_black"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/withdrawal_btn"
            app:layout_constraintTop_toBottomOf="@+id/info">

            <ToggleButton
                android:id="@+id/button1"
                android:textAppearance="@style/basic_12dp_black"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:backgroundTint="@drawable/report_color"
                android:background="@drawable/pref_diamond"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                app:layout_constraintStart_toStartOf="parent" />

            <ToggleButton
                android:id="@+id/button2"
                style="@style/basic_12dp_black"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:backgroundTint="@drawable/report_color"
                android:background="@drawable/pref_diamond"
                tools:layout_editor_absoluteY="125dp" />

            <ToggleButton
                android:id="@+id/button3"
                style="@style/basic_12dp_black"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:backgroundTint="@drawable/report_color"
                android:layout_alignParentTop="true"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/pref_diamond" />

            <ToggleButton
                android:id="@+id/button4"
                style="@style/basic_12dp_black"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="@drawable/report_color"
                android:layout_marginTop="60dp"
                android:background="@drawable/pref_diamond"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                app:layout_constraintStart_toStartOf="parent" />

            <ToggleButton
                android:id="@+id/button5"
                style="@style/basic_12dp_black"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="60dp"
                android:backgroundTint="@drawable/report_color"
                android:background="@drawable/pref_diamond"
           />

            <ToggleButton
                android:id="@+id/button6"
                style="@style/basic_12dp_black"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@drawable/report_color"
                android:layout_marginTop="90dp"
                android:background="@drawable/pref_diamond" />
            <ToggleButton
                android:id="@+id/button7"
                style="@style/basic_12dp_black"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:backgroundTint="@drawable/report_color"
                android:layout_marginTop="120dp"
                android:background="@drawable/pref_diamond"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                app:layout_constraintStart_toStartOf="parent" />

            <ToggleButton
                android:id="@+id/button8"
                android:textAppearance="@style/basic_12dp_black"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="120dp"
                android:backgroundTint="@drawable/report_color"
                android:background="@drawable/pref_diamond"
                tools:layout_editor_absoluteY="125dp" />

        </RelativeLayout>
        <Button
            android:id="@+id/withdrawal_btn"
            style="@style/bold_16dp"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/btn_check_box"
            android:text="다음"
            android:layout_marginBottom="44dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>