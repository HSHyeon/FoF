<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wrap"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="bottom"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <TextView
                android:id="@+id/title"
                style="@style/point_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="신고"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/btn_cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1px"
            android:background="@color/lightgray"
            app:layout_constraintTop_toBottomOf="@+id/wrap"
            />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/logo_blink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="74dp"
            app:layout_constraintTop_toBottomOf="@+id/wrap" />

        <TextView
            android:id="@+id/textView9"
            style="@style/bold_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더 좋은 포프가 되기 위해\n노력할게요!"

            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <TextView
            android:id="@+id/report_name"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@drawable/pref_diamond"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:clickable="false"
            android:text="저작권 침해"
            android:gravity="center"
            style="@style/bold_16dp"
            android:textSize="12dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/info"
            style="@style/bold_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:text="해당 의견은 시스템의 문제를\n파악하는데 큰 도움이 됩니다"
            android:textAlignment="center"
            android:textColor="@color/deepgray"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/report_name" />
        <Button
            android:id="@+id/withdrawal_btn"
            style="@style/bold_16dp"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/btn_check_box"
            android:text="완료"
            android:layout_marginBottom="44dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>